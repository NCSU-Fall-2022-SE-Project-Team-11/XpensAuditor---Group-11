<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SMSDBFetchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Transaction Info"
            android:textColor="@color/emeraldgreen"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <TableLayout
            android:id="@+id/Table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:stretchColumns="2"
            android:shrinkColumns="1">
            <TableRow
                android:layout_gravity="right">
                <TextView
                    android:text="Transaction ID"
                    android:textColor="@color/emeraldgreen"
                    android:padding="3dip"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:gravity="left"
                    android:padding="3dip"
                    android:id="@+id/smstid" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Transaction amount"
                    android:textColor="@color/emeraldgreen"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:gravity="left"
                    android:padding="3dip"
                    android:id="@+id/smstamnt"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Shop Name"
                    android:textColor="@color/emeraldgreen"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:gravity="left"
                    android:padding="3dip"
                    android:id="@+id/smsshpname"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Shared With"
                    android:textColor="@color/emeraldgreen"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:gravity="left"
                    android:padding="3dip"
                    android:id="@+id/smssharedwith"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Category"
                    android:textColor="@color/emeraldgreen"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:gravity="left"
                    android:padding="3dip"
                    android:id="@+id/smscat"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Date"
                    android:textColor="@color/emeraldgreen"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:gravity="left"
                    android:padding="3dip"
                    android:id="@+id/smsdate"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Message"
                    android:textColor="@color/emeraldgreen"
                    android:padding="3dip" />
            </TableRow>

            <TableRow>
                <TextView
                    android:gravity="left"
                    android:padding="3dip"
                    android:layout_width="wrap_content"
                    android:id="@+id/sms"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/edit_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Edit"
            android:textColor="@android:color/black" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>